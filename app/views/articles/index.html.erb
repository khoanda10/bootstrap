<h1> Listing article</h1>
<table>
  <thead>
      <tr>
          <th>Title</th>
          <th>Description</th>
          <th colspan="2">Action</th>
      </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
        <tr>
          <td><%= article.title%></td>
          <td><%= article.description%></td>
          <td><%= link_to 'Show', article %></td>
          <td><%= link_to 'Edit', edit_article_path(article)%></td>
          <td><%= link_to "Destroy this article", article, method: :delete, :onclick => "return confirm('Are you sure you want to delete this post?')" %></td>
        </tr>
   <% end %>
  </tbody>
</table>
